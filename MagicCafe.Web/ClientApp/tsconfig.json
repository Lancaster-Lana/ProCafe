{
  "compileOnSave": false,

  "compilerOptions": {
    // types option has been previously configured
    "types": [
      "node",
      "googlemaps" // add node as an option
    ],
    // typeRoots option has been previously configured
    "typeRoots": [
      "node_modules/@types" // add path to @types
    ],
    "baseUrl": "./",
    "paths": {
      //  "@angular/*": [
      //    "node_modules/@angular/*"
      //  ],
        "core-js/es7/reflect": [
          "node_modules/core-js/proposals/reflect-metadata"
        ]    
    },
    //"exclude": [
    //  "node_modules",
    //  "**/*.spec.ts"
    //],
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",

    "lib": [
      "es2017",
      "dom"
    ]
  }
}
